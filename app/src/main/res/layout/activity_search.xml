<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/DarkGrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="194dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/locationSpinner"
        android:layout_marginTop="226dp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="172dp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_bright"
        android:text="Back"

        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="435dp" />

    <Button
        android:id="@+id/locationSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="88dp"
        android:background="@color/colorPrimaryDark"
        android:text="Search"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/nameSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nameSearchText"
        android:layout_alignStart="@+id/locationSearchButton"
        android:background="@color/colorPrimaryDark"
        android:text="Search"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="94dp" />

    <Button
        android:id="@+id/categorySearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/categorySpinner"
        android:layout_alignStart="@+id/locationSearchButton"
        android:background="@color/colorPrimaryDark"
        android:text="Search"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="172dp" />

    <Button
        android:id="@+id/valueSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/valueSearchTextMin"
        android:layout_alignStart="@+id/locationSearchButton"
        android:layout_marginBottom="-60dp"
        android:background="@color/colorPrimaryDark"
        android:text="Search"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="251dp" />

    <EditText
        android:id="@+id/valueSearchTextMin"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/categorySpinner"
        android:layout_marginTop="24dp"
        android:hint="Min"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="251dp" />

    <EditText
        android:id="@+id/nameSearchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="147dp"
        android:hint="Keyword(s)"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="94dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/donationsRecyclerView"
        android:layout_width="368dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="61dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="307dp" />

    <Spinner
        android:id="@+id/locationSpinner"
        android:layout_width="194dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/locationSearchButton"
        android:layout_marginStart="16dp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/valueSearchTextMax"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/valueSearchTextMin"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/backButton"
        android:ems="10"
        android:hint="Max"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/emptyMessageView"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/valueSearchTextMin"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="190dp"
        android:layout_marginEnd="-266dp"
        android:text="TextView" />

</RelativeLayout>